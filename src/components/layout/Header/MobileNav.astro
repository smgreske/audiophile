---
const { navArray } = Astro.props;

interface NavLink {
  name: string;
  path: string;
}
---

<div class='AbsoluteCenter top-[-500px] lg:hidden w-2/3 py-16 text-24 text-clr-n2 bg-black/90 rounded-lg'>
  <nav class='flex flex-col items-center gap-16 w-full lg:hidden | tracking-[2px] text-13 uppercase font-bold'>
    {
      navArray.map((current: NavLink) => (
        <a href={current.path} class='hover:text-clr-hover'>
          {current.name}
        </a>
      ))
    }
  </nav>
</div>
