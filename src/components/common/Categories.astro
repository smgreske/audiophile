---
import { Icon } from 'astro-icon';

import headphones from 'assets/shared/desktop/image-category-thumbnail-headphones.png';
import speakers from 'assets/shared/desktop/image-category-thumbnail-speakers.png';
import earphones from 'assets/shared/desktop/image-category-thumbnail-earphones.png';

const categoryArray = [
  {name:'headphones', image:headphones, path:'/'},
  {name:'speakers', image:speakers, path:'/'},
  {name:'earphones', image:earphones, path:'/'},
]
---

<section class='grid grid-cols-1 md:grid-cols-3 | gap-16 md:gap-3 lg:gap-8 | mb-[120px] md:mb-[92px] lg:mb-[192px] | text-center uppercase text-clr-n5'>

  {categoryArray.map( (current) => (
    <div class='min-h-[165px] lg:min-h-[200px] | relative | bg-clr-n3 rounded-md'>
      <img class='AbsoluteCenter | max-w-[160px] lg:max-w-[240px] | -translate-y-[35%]'
        src={current.image.src}
        alt={current.name}/>
      <h2 class='mb-4 | text-15 lg:text-18 | mt-[88px] lg:mt-[116px]'>
        {current.name}
      </h2>
      <a class='flex justify-center gap-2' href={current.path}>
        <p class='text-13 font-bold opacity-50 text-clr-n5'>shop</p>
        <Icon class='w-2 fill-clr-2' name='icon-arrow-right' />
      </a>
    </div>
  ))}

</section>
